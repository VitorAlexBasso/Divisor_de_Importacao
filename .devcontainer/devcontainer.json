{
  "name": "Python 3 - Streamlit",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance"],
      "settings": {}
    },
    "codespaces": {
      "openFiles": ["README.md", "App.py"]  // <- ajuste aqui se o arquivo tiver outro nome
    }
  },
  "updateContentCommand": "[ -f packages.txt ] && sudo apt-get update && sudo xargs -a packages.txt apt-get install -y; [ -f requirements.txt ] && pip3 install -r requirements.txt; echo 'âœ… Packages/requirements instalados'",
  "postAttachCommand": "streamlit run App.py --server.enableCORS false --server.enableXsrfProtection false", // <- ajuste aqui se o arquivo tiver outro nome
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8501]
}
